{
    "name": "shayd/filament-smart-export",
    "description": "Smart automatic export action for Filament that discovers models and relationships automatically",
    "keywords": [
        "filament",
        "laravel",
        "export",
        "excel",
        "csv",
        "automatic",
        "bulk-action"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shayd",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "illuminate/support": "^10.0|^11.0",
        "openspout/openspout": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Shayd\\FilamentSmartExport\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shayd\\FilamentSmartExport\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0",
        "spatie/laravel-package-tools": "^1.16",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "pest": "vendor/bin/pest",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shayd\\FilamentSmartExport\\FilamentSmartExportServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

